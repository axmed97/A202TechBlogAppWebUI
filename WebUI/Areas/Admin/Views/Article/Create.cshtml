@model Article

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea type="text" asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" accept="image/*" id="photo" name="Photo" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select class="form-control" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group">
        <select multiple class="form-control" name="Tags" >
            @foreach (var item in ViewBag.Tags as List<Tag>)
            {
                <option value="@item.Id">@item.TagName</option>
            }
        </select>
    </div>
    <input type="submit" class="btn btn-info" value="Create" />
</form>