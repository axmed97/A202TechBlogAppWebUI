@model List<Tag>

<a href="/admin/tag/create" class="btn btn-dark">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Tag Name</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#</td>
                <td>@item.TagName</td>
                <td>
                    <a href="/admin/tag/edit/@item.Id" class="btn btn-warning">Edit</a>
                    @if(Model.Count > 1)
                    {
                        <a href="/admin/tag/delete/@item.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>